{
    "name": "fission-ide",
    "displayName": "fission-ide",
    "description": "",
    "publisher": "Tosone",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:fission-router",
        "onView:fission-package",
        "onView:fission-function",
        "onView:fission-environment",
        "onCommand:fission-ide.deploy"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "Fission",
            "properties": {
                "fission.server": {
                    "type": "string",
                    "default": "",
                    "description": "Fission controller server address, prefix with 'http://'."
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "fission-ide-bar",
                    "title": "Fission IDE",
                    "icon": "resources/function.svg"
                }
            ]
        },
        "views": {
            "fission-ide-bar": [
                {
                    "id": "fission-function",
                    "name": "Function"
                },
                {
                    "id": "fission-package",
                    "name": "Package",
                    "visibility": "collapsed"
                },
                {
                    "id": "fission-router",
                    "name": "Router",
                    "visibility": "collapsed"
                },
                {
                    "id": "fission-environment",
                    "name": "Environment",
                    "visibility": "collapsed"
                }
            ]
        },
        "commands": [
            {
                "command": "fission-ide.deploy",
                "title": "Fission function deploy"
            },
            {
                "command": "fission-ide.function.delete",
                "title": "Delete function"
            },
            {
                "command": "fission-ide.function.test",
                "title": "Test function"
            },
            {
                "command": "fission-ide.function.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "fission-ide.environment.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "fission-ide.package.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceLangId == javascript",
                    "command": "fission-ide.deploy",
                    "group": "z_commands"
                }
            ],
            "editor/context": [
                {
                    "when": "resourceLangId == javascript",
                    "command": "fission-ide.deploy",
                    "group": "fission@1"
                }
            ],
            "view/title": [
                {
                    "command": "fission-ide.function.refresh",
                    "when": "view == fission-function",
                    "group": "navigation"
                },
                {
                    "command": "fission-ide.environment.refresh",
                    "when": "view == fission-environment",
                    "group": "navigation"
                },
                {
                    "command": "fission-ide.package.refresh",
                    "when": "view == fission-package",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "fission-ide.function.delete",
                    "when": "viewItem == dependency",
                    "group": "fission@1"
                },
                {
                    "command": "fission-ide.function.test",
                    "when": "viewItem == dependency",
                    "group": "fission@2"
                }
            ]
        }
    },
    "scripts": {
        "compile": "npm-run-all compile:*",
        "compile:vscode": "webpack --config ./build/webpack.vscode.js",
        "compile:views": "webpack --mode production --config ./build/webpack.view.js",
        "watch": "npm-run-all -p watch:*",
        "watch:vscode": "webpack --watch --config ./build/webpack.vscode.js",
        "watch:views": "webpack --watch --mode development --config ./build/webpack.view.js",
        "vscode:prepublish": "npm-run-all package:*",
        "package:views": "webpack --mode production --devtool hidden-source-map --config ./build/webpack.view.js",
        "package:vscode": "webpack --mode production --devtool hidden-source-map --config ./build/webpack.vscode.js",
        "lint": "eslint src --ext ts",
        "package": "vsce package"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tosone/fission-ide"
    },
    "devDependencies": {
        "@types/adm-zip": "^0.4.33",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.0",
        "@types/node": "^14.14.22",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/vscode": "^1.52.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "adm-zip": "^0.5.2",
        "antd": "^4.11.2",
        "axios": "^0.21.1",
        "css-loader": "^5.0.1",
        "eslint": "^7.18.0",
        "glob": "^7.1.6",
        "jquery": "^3.5.1",
        "mocha": "^8.2.1",
        "npm-run-all": "^4.1.5",
        "original-fs": "^1.1.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "sass": "^1.32.5",
        "sass-loader": "^10.1.1",
        "style-loader": "^2.0.0",
        "ts-loader": "^8.0.14",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0",
        "webpack": "^5.19.0",
        "webpack-cli": "^4.4.0"
    },
    "license": "MIT",
    "dependencies": {
        "vsce": "^1.84.0"
    }
}
